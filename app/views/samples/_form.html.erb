<% form_for(@sample, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>    
    <%= f.label :original_image %>
    <%= f.file_field :original_image %>
  </p>
  <p>
    <%= f.label :processed_image %>
    <%= f.file_field :processed_image %>
  </p>  
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>

